# Application Settings
DEBUG=false
SECRET_KEY=your-secret-key-here-change-this-in-production

# Server Settings
HOST=0.0.0.0
PORT=8000

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ChromaDB Settings
CHROMADB_HOST=localhost
CHROMADB_PORT=8002
CHROMADB_COLLECTION=legal_documents

# Model Settings
MODEL_ENDPOINT=http://localhost:8001
MODEL_NAME=meta-llama/Llama-2-70b-chat-hf
MAX_TOKENS=2048
TEMPERATURE=0.1

# Embedding Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Document Processing
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_TYPES=[".pdf", ".txt", ".docx"]
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security & Audit
ENABLE_AUDIT_LOGGING=true
ALLOWED_IPS=  # Comma-separated IPs (leave empty for no restriction)

# n8n Integration (optional)
N8N_WEBHOOK_URL=
SLACK_WEBHOOK_URL= 